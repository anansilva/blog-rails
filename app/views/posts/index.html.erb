<% content_for :meta_title, 'Blog Posts' + " #{@tag}" %>
<% content_for :meta_description, 'thoughts and learnings on software development' %>

<div class="w-3/4 pb-4 m-auto mt-8 leading-10">
  <h1 class="mx-4 text-6xl font-bold leading-tight tracking-tighter text-black lg:px-0 dark:text-gray-50 lg:text-4xl">
    I like to write about:
  </h1>
  <% Tag.pluck(:name).uniq.each do |tag_name| %>
    <%= link_to "##{tag_name}", filter_posts(tag_name),
      class: "ml-4 hover:underline sm:text-3xl lg:text-sm font-bold uppercase text-indigo-700 dark:text-indigo-500"%>
  <% end %>
  <div class="flex flex-wrap justify-start w-full mx-auto mt-10 lg:container">
    <% @posts.each do |post| %>
      <%= render partial: 'shared/post_card', locals: { post: post } %>
    <% end %>
  </div>
</div>

<%= render partial: 'shared/pagination', locals: { pagination: @pagination } %>
