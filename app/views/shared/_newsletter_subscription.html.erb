<div data-controller="subscription" class="pb-10 text-center"  %>
  <h2 class="mb-2 text-5xl tracking-wide lg:text-2xl">Subscribe to get future posts</h2>
  <%= form_with url: api_new_subscription_url,
    data: { action: "ajax:success->subscription#onSuccess ajax:error->subscription#onError" },
    method: :post do |form| %>
    <div data-subscription-target="email">
      <%= form.email_field :email, placeholder: "Enter your email",
        class: "text-4xl lg:text-base p-4 w-1/2 lg:w-1/3 mt-6 lg:py-1 lg:px-2 lg:m-2 border rounded focus:outline-none focus:border-indigo-500 text-gray-900 dark:text-gray-300 dark:bg-gray-900" %>
      <%= form.submit 'subscribe', id: "newsletter-btn",
        class: "text-4xl lg:text-base p-4 cursor-pointer lg:py-1 lg:px-2 font-bold rounded focus:outline-none text-gray-100 border-gray-300 bg-teal-600" %>
    </div>
  <% end %>
</div>
