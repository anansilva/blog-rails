<h1 class="text-6xl font-bold leading-tight tracking-tighter text-black lg:px-0 dark:text-gray-50 lg:text-4xl">
  I like to write about:
</h1>

<% published_tags.each do |tag_name| %>
  <%= link_to "##{tag_name}", filter_posts(tag_name),
    class: "mr-4 lg:mr-2 hover:underline sm:text-3xl lg:text-sm font-bold uppercase text-indigo-700 dark:text-indigo-500"%>
<% end %>
